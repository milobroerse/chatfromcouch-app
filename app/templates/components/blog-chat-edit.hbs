{{#if isEditing}}
  <p><button {{action "doneEditing"}}>Done</button></p>
  <p>{{input type="text" value=chat.title class="form-control" placeholder="Chat title"}}</p>
  <p>{{power-select-blockless options=users selected=chat.user onchange=(action (mut chat.user)) labelPath="name" placeholder="Chat user"}}</p>
  <p>{{input type="text" value=chat.excerpt class="form-control" placeholder="Chat exercept"}}</p>
  <p>{{markdown-editor value=chat.body  placeholder="Chat content" rows="5"}}</p>

  <p><button {{action "deleteChat" class="btn btn-default"}}>Delete</button></p>
{{else}}
  <p><button {{action "edit"}}>Edit</button></p>
{{/if}}
